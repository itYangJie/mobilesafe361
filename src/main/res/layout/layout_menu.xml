<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/menu_bg"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
        <TextView 
            style="@style/MenuTabText"
            android:layout_marginTop="30dp"
            android:id="@+id/slideMenu_news"
            android:clickable="true"
            android:onClick="slideMenuItemClick"
            android:background="@drawable/slidemenuitem_selector"
            android:drawableLeft="@drawable/tab_news"
            android:text="新闻"/>
        <TextView 
            style="@style/MenuTabText"
            android:id="@+id/slideMenu_read"
            android:clickable="true"
            android:onClick="slideMenuItemClick"
            android:background="@drawable/slidemenuitem_selector"
            android:drawableLeft="@drawable/tab_read"
            android:text="订阅"/>
        <TextView 
            style="@style/MenuTabText"
            android:id="@+id/slideMenu_ties"
            android:clickable="true"
            android:onClick="slideMenuItemClick"
            android:background="@drawable/slidemenuitem_selector"
            android:drawableLeft="@drawable/tab_ties"
            android:text="跟帖"/>
        <TextView 
            style="@style/MenuTabText"
            android:id="@+id/slideMenu_pics"
            android:clickable="true"
            android:onClick="slideMenuItemClick"
            android:background="@drawable/slidemenuitem_selector"
            android:drawableLeft="@drawable/tab_pics"
            android:text="图片"/>
        <TextView 
            style="@style/MenuTabText"
            android:id="@+id/slideMenu_ugc"
            android:clickable="true"
            android:onClick="slideMenuItemClick"
            android:background="@drawable/slidemenuitem_selector"
            android:drawableLeft="@drawable/tab_ugc"
            android:text="话题"/>
        <TextView 
            style="@style/MenuTabText"
            android:id="@+id/slideMenu_vote"
            android:clickable="true"
            android:onClick="slideMenuItemClick"
            android:background="@drawable/slidemenuitem_selector"
            android:drawableLeft="@drawable/tab_vote"
            android:text="投票"/>
        <TextView 
            style="@style/MenuTabText"
            android:id="@+id/slideMenu_focus"
            android:clickable="true"
            android:onClick="slideMenuItemClick"
            android:background="@drawable/slidemenuitem_selector"
            android:drawableLeft="@drawable/tab_focus"
            android:text="聚合阅读"/>
        
    </LinearLayout>


