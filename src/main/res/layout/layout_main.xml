<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout android:layout_width="match_parent"
        android:background="@android:color/holo_blue_dark"
        android:layout_height="55dp">
        
        <ImageView android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_back"
            android:background="@drawable/main_back"/>
        
        <View android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/btn_back"
            android:background="@drawable/top_bar_divider"/>
        
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:layout_centerInParent="true"
            android:text="361手机卫士"/>
        
    </RelativeLayout>
    <com.ui.FocusTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="有了手机卫士，腰不酸了，腿不疼了，走路也利索了。妈妈再也不用担心我被坏人骗了。呱呱呱！嘎嘎嘎！"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="25sp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp">
        <android.support.v4.view.ViewPager
            android:id="@+id/vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#aa000000"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:layout_marginTop="3dp"
                android:id="@+id/home_text"
                android:ellipsize="end"
                android:gravity="center"
                android:text="这是文本"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:id="@+id/ll_home"
                android:gravity="center"
                android:layout_marginBottom="3dp"
                android:layout_height="wrap_content">

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <GridView
        android:id="@+id/gv_home_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="2"
        android:verticalSpacing="15dp">
    </GridView>
</LinearLayout>